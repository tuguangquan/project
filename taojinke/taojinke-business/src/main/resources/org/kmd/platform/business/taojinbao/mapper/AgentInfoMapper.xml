<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kmd.platform.business.taojinbao.mapper.AgentInfoMapper">
    <sql id="agentInfo_fields">
		ID,WEIXINID,WEIXINORIGINALID,APPID,APPSECRET,AGENTID,FANSADDNUM,FANSCOUNTNUM,AGENTNAME,TOKEN,DESCRIPTION,ENCODINGAESKEY
	</sql>

    <resultMap id="AgentInfoResultMap" type="AgentInfo">
        <id property="id" column="ID"/>
        <result property="weixinId" column="WEIXINID"/>
        <result property="weixinOriginalId" column="WEIXINORIGINALID"/>
        <result property="appID" column="APPID"/>
        <result property="appSecret" column="APPSECRET"/>
        <result property="agentId" column="AGENTID"/>
        <result property="fansAddNum" column="FANSADDNUM"/>
        <result property="fansCountNum" column="FANSCOUNTNUM"/>
        <result property="agentName" column="AGENTNAME"/>
        <result property="token" column="TOKEN"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="encodingAESKey" column="ENCODINGAESKEY"/>
    </resultMap>

    <insert id="add" parameterType="AgentInfo"  keyProperty="id"
            useGeneratedKeys="true">
        INSERT INTO
        agent_info(
            WEIXINID,WEIXINORIGINALID,APPID,APPSECRET,AGENTID,FANSADDNUM,FANSCOUNTNUM,AGENTNAME,TOKEN,DESCRIPTION,ENCODINGAESKEY
        )
        VALUES (#{weixinId},#{weixinOriginalId},#{appID},#{appSecret},#{agentId},#{fansAddNum},#{fansCountNum},#{agentName},#{token},#{description},#{encodingAESKey});
        <selectKey resultType="long" keyProperty="id">
            select
            LAST_INSERT_ID() as id
        </selectKey>
    </insert>

    <update id="update" parameterType="AgentInfo">
        UPDATE agent_info
        <set>
            <if test="weixinId != null">WEIXINID=#{weixinId},</if>
            <if test="weixinOriginalId != null">WEIXINORIGINALID=#{weixinOriginalId},</if>
            <if test="appID != null">APPID=#{appID},</if>
            <if test="appSecret != null">APPSECRET=#{appSecret},</if>
            <if test="agentId !=null">AGENTID=#{agentId},</if>
            <if test="fansAddNum !=null">FANSADDNUM=#{fansAddNum},</if>
            <if test="fansCountNum !=null">FANSCOUNTNUM=#{fansCountNum},</if>
            <if test="agentName!=null">AGENTNAME=#{agentName},</if>
            <if test="token !=null">TOKEN=#{token}</if>
        </set>
        WHERE ID = #{id};
    </update>


    <select id="findByCondition" parameterType="map" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="agentInfo_fields"/>
        FROM agent_info   where 1=1
        <!--<where>-->
            <!--<if test="name!=null">NAME=#{name}</if>-->
            <!--<if test="description!=null">AND DESCRIPTION=#{description}</if>-->
            <!--<if test="status!=null">AND STATUS=#{status}</if>-->
        <!--</where>-->
    </select>

    <select id="getAgentInfoByAgentName" parameterType="java.lang.String" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="agentInfo_fields"/>
        FROM agent_info WHERE agentName=#{agentName}
    </select>
    <select id="getAgentInfoByAgentId" parameterType="java.lang.Long" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="agentInfo_fields"/>
        FROM agent_info WHERE agentId=#{agentId}
    </select>

    <select id="getAgentInfoByAppID"  parameterType="java.lang.String" resultMap="AgentInfoResultMap">
        SELECT
        <include refid="agentInfo_fields"/>
        FROM agent_info WHERE appID=#{appId}
    </select>

    <delete id="delete" parameterType="AgentInfo">
        DELETE FROM agent_info
        WHERE appID=#{appId}
    </delete>

</mapper>