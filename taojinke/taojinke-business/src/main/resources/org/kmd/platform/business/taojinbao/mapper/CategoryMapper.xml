<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kmd.platform.business.taojinbao.mapper.CategoryMapper">
    <sql id="category_fields">
        ID,AGENTID,NAME,IMAGE,DESCRIPTION,STATUS,SHOW
    </sql>

    <resultMap id="CategoryResultMap" type="Category">
        <id property="id" column="ID"/>
        <result property="agentId" column="AGENTID"/>
        <result property="name" column="NAME"/>
        <result property="image" column="IMAGE"/>
        <result property="description" column="DESCRIPTION"/>
        <result property="status" column="STATUS"/>
        <result property="show" column="SHOW"/>
    </resultMap>

    <insert id="add" parameterType="Category"  keyProperty="id"
            useGeneratedKeys="true">
        INSERT INTO
        ims_goods_category(
        AGENTID,NAME,IMAGE,DESCRIPTION,STATUS,SHOW
        )
        VALUES (#{agentId},#{name},#{image},#{description},#{status},#{show});
        <selectKey resultType="long" keyProperty="id">
            select
            LAST_INSERT_ID() as id
        </selectKey>
    </insert>

    <update id="update" parameterType="Category">
        UPDATE ims_goods_category
        <set>
            <if test="name != null">NAME=#{name},</if>
            <if test="image != null">IMAGE=#{image},</if>
            <if test="description != null">DESCRIPTION=#{description},</if>
            <if test="status != null">STATUS=#{status},</if>
            <if test="show !=null">SHOW=#{show}</if>
        </set>
        WHERE ID=#{id} and AGENTID = #{agentId}  ;
    </update>

    <select id="getByAgentId"  parameterType="java.lang.Long" resultMap="CategoryResultMap">
        SELECT
        <include refid="agentInfo_fields"/>
        FROM ims_goods_category WHERE AGENTID = #{agentId}
    </select>

    <delete id="delete" parameterType="Category">
        DELETE FROM ims_goods_category
        WHERE ID=#{id} and AGENTID = #{agentId}
    </delete>

</mapper>